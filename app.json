{
  "expo": {
    "name": "FoodBridge - Reduce Food Waste",
    "slug": "foodbridge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F0F8FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foodbridge.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F0F8FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.foodbridge.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-location", "expo-image-picker"],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      },
      "firebaseApiKey": "your-api-key-here",
      "firebaseAuthDomain": "your-project.firebaseapp.com",
      "firebaseProjectId": "your-project-id",
      "firebaseStorageBucket": "your-project.appspot.com",
      "firebaseMessagingSenderId": "123456789",
      "firebaseAppId": "your-app-id",
      "firebaseMeasurementId": "your-measurement-id"
    }
  }
}
